<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#fff"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/dialog_title_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#2c66a8"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="我是标题"
            android:textColor="#fff"
            android:textSize="18dp" />

        <View
            android:id="@+id/dialog_title_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#2c66a8" />

        <LinearLayout
            android:id="@+id/dialog_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_message_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp"
                android:text="我是内容啊"
                android:textColor="#333333"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_btn_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFF3F3F3" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFF3F3F3"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dialog_ok_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="确定"
                    android:textColor="#2c66a8"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/dialog_btn_line"
                    android:layout_width="1px"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#FFF3F3F3" />

                <TextView
                    android:id="@+id/dialog_cancel_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="取消"
                    android:textColor="#FF9E9E9E"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>